@page "/"

<div class="px-3 d-flex flex-column justify-content-center">
    <img class="mx-auto" src="imgs/rtc_icon.png"/>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="username" placeholder="Username" autofocus @bind="username"
                @bind:event="oninput" @ref="usernameInput" @onkeyup="OnUsernameKeyUp">
        <label for="username">Username</label>
    </div>
    <div class="form-floating mb-3">
        <input type="password" class="form-control" id="password" placeholder="Password" @bind="password"
                @bind:event="oninput" @ref="passwordInput" @onkeyup="OnPasswordKeyUp">
        <label for="password">Password</label>
    </div>
    <button class="btn btn-primary" @onclick="OnSubmit">
        <i class="fa-solid fa-arrow-right-to-bracket"></i> Sign in
    </button>
</div>
