@page "/menu"

<div class="container w-100 h-100 pt-3">
    <div class="row row-cols-2 g-3">
        <div class="col text-center" @onclick='()=>OnMenuClicked("/bill-import")'>
            <div class="menu-item p-3 border rounded shadow-sm h-100 d-flex flex-column align-items-center justify-content-center">
                <img src="imgs/qr-code.png" class="img-fluid mb-2" alt="Serial">
                <span class="fw-semibold">Serial</span>
            </div>
        </div>
        @for (int i = 1; i <= 7; i++)
        {
            <div class="col text-center">
                <div class="menu-item disabled-menu p-3 border rounded shadow-sm h-100 d-flex flex-column align-items-center justify-content-center">
                    <img src="imgs/placeholder-menu.png" class="img-fluid mb-2" alt="Menu @(i)">
                    <span class="fw-semibold">Menu @(i)</span>
                </div>
            </div>
        }
    </div>
</div>
