@page "/bill-import"

<div class="d-flex flex-column w-100 h-100">
    <div class="d-flex justify-content-center text-center align-middle">
        <h3 class="fw-bold">Danh sách phiếu nhập</h3>
    </div>
    <div class="overflow-auto pb-3" style="touch-action: pinch-zoom; -ms-touch-action: pinch-zoom;">
        <table class="table table-hover table-striped table-bordered border-primary mb-0" style="table-layout:fixed">
            <colgroup>
                <col style="width:100px">
                <col style="width:200px">
                <col style="width:300px">
            </colgroup>
            <thead class="table-light text-center align-middle">
                <tr>
                    <th class="text-center">Ngày yc nhập</th>
                    <th class="text-center">Số phiếu</th>
                    <th class="text-center">Nhà cung cấp/Bộ phận</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in billImport)
                {
                    <tr>
                        <td class="text-center align-middle">@item.DateRequestImport.ToString("dd/MM/yyyy")</td>
                        <td class="text-center align-middle">@item.BillImportCode</td>
                        <td class="text-start align-middle">@(item.Suplier ?? "")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>